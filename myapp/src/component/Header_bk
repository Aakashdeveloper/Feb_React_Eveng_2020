import React,{Component} from 'react';

class Header extends Component {

    constructor(props){
        super(props)

        this.state={
            title:'React App'
        }
    }

    render(){

        const mystyle= {
            headers:{
                backgroundColor:'teal'
            },
            logo:{
                fontSize:'30px',
                color:'#fff',
                textAlign:'center'
            }
        }

        return(
            <header style={mystyle.headers}>
                <div style={mystyle.logo}>{this.state.title}</div>
                <center>
                    <input/>
                </center>
                <hr/>
            </header>
        )
    }
    
}

export default Header;




